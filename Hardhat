mkdir ignition-demo
cd ignition-demo

npm init -y
npm install --save-dev hardhat @nomicfoundation/hardhat-toolbox hardhat-ignition @openzeppelin/contracts
npx hardhat
# Choose: "Create an empty hardhat.config.js"



npx hardhat ignition deploy ignition/modules/DeployAll.js

